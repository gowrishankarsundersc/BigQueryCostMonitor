{
  "manifest_version": 2,

  "name": "BigQuery Cost Limiter",
  "description": "This extension ensures that BigQuery costs are always under check",
  "version": "1.0",

  "browser_action": {
    "default_icon": "bq.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://bigquery.cloud.google.com/*"],
      "js": ["js/jquery-2.1.4.min.js", "js/myscript.js"]
    }
  ],
  "options_page": "options.html",
  "permissions": [
    "storage",
    "activeTab",
    "https://ajax.googleapis.com/",
    "*://bigquery.cloud.google.com/*",
    "tabs"
  ]
}